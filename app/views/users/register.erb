<div class="">

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <%  end %>

  <h4>Create a new User</h4>
  <form class="" action="/users" method="post">
    <div class="">
      Email:
      <input type="email" name="user[email]">
    </div>

    <div class="">
      Password:
      <input type="password" name="user[password]" value="">
    </div>

    <input type="submit" value="Create">
  </form>
</div>
